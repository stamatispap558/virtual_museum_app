<div style="background-color: #fff;margin-top: 25px;padding:20px; max-width:100%; margin-left:34%; margin-bottom:5%; border-radius:25px">
<h3>{{viewTitle}}</h3>
<form action="/Events" method="POST" autocomplete="off" id="form" enctype="multipart/form-data">
    <input type="hidden" name="_id" value="{{Events._id}}">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Title</label>
            <input type="text" class="form-control" name="title" placeholder="Title" value="{{Events.title}}">
        </div>
        <div class="form-group col-md-6">
            <label>Image</label><br>
            <input type="file" id="files" name="filetoupload" name="img" value="{{Events.img}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Start Day</label><br>
            <input type="text" class="form-control" placeholder="Start Day" name="start_day" value="{{Events.start_day}}">
        </div>
        <div class="form-group col-md-6">
            <label>Expire Day</label>
            <input type="text" class="form-control" name="expire_day" placeholder="Expire Day" value="{{Events.expire_day}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-12">
            <label>Text</label>
            <textarea rows="3" class="form-control " name="text">
                {{Events.text}}
            </textarea>
        </div>
    </div>
   
    <div class="form-group">
            <button type="submit" class="btn btn-info" style="background-color:  #922222;" href="/Events/list2"><i class="fa fa-database"></i> Submit</button>
            <a class="btn btn-secondary" href="/Events/list2"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>
</div>

